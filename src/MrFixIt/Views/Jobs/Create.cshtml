@model MrFixIt.Models.Job

<div class="block text-center">
    <h2>Create new Job</h2>
        <h4>Add a new job</h4>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new { @required = "true", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.TextBoxFor(model => model.Description, new { @required = "true", @class = "form-control" })
            </div>
            <input type="submit" value="Add new job" class="btn btn-primary"/>
        }
    <p>@Html.ActionLink("Back to list", "Index")</p>
