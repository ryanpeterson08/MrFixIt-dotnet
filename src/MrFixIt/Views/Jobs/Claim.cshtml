<script type="text/javascript">
    $('.new-claim').submit(function (event) {
        event.preventDefault();
        $.ajax({
            url: '@Url.Action("AClaim")',
            type: 'POST',
            dataType: 'json',
            data: $(this).serialize(),
            success: function (result) {
                var resultMessage = 'You claimed a job';
                $('#show-result').html(resultMessage);
            }

        })

    })
</script>
