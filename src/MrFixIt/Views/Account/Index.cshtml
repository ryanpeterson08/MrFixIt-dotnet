@{
    ViewBag.Title = "Register";
}

@using System.Security.Claims

<div class="block">
    <h2>Mr. Fix-It</h2>

    @if (User.Identity.IsAuthenticated)
    {
        <h4>Hello @User.Identity.Name!</h4>

    } else
    {
        <p>@Html.ActionLink("Register", "Register")</p>
        <p>@Html.ActionLink("Log in", "Login")</p>
    }
</div>




